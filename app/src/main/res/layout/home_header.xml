<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        app:srcCompat="@drawable/shadow_up_to_down"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <ImageView
        android:id="@+id/poster"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="580dp" />

    <ImageView
        android:id="@+id/bottom_shadow"
        app:srcCompat="@drawable/shadow_down_to_up"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignBottom="@+id/poster" />

    <TextView
            android:id="@+id/poster_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:textStyle="bold"
            android:shadowDy="3"
            android:gravity="center"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:shadowRadius="4"
            android:layout_above="@+id/poster_year"
            android:textColor="@color/white" />
    <TextView
            android:id="@+id/poster_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:layout_alignBottom="@+id/poster"
            android:shadowDy="3"
            android:shadowRadius="4"
            android:textColor="@color/light_gray" />

</RelativeLayout>